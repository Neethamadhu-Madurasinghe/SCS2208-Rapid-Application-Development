<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Static Assets -->
    <link rel="stylesheet" href="src/styles.css">
    
    <title>20001223</title>
  </head>
  
  
  <body class="body-class">
    <% if(messages.error) { %> 
        <h1 class="error">
        <%= messages.error %>
        </h1>
    <% } %>

      <div class="btn-container container">
          <button class="btn" id="login-btn">Login</button>
          <button class="btn" id="signup-btn">Sign Up</button>
      </div>
      
  
  
      <div class="form-container container hide" id="signup-form">
          
          <img src="src/image.jpg" class="image"/>
          <form action="/register" method="post" class="form">
            <h1 class="title">Sign Up</h1>
              <section>
                  <input id="username" name="email" type="email" placeholder="Email" autocomplete="email" required autofocus class="form-input">
              </section>
              <section>                
                  <input id="current-password" name="password" type="password" placeholder="Password" autocomplete="current-password" required class="form-input">
              </section>
              <button class="btn" type="submit">Sign up</button>
              <p class="rehLinkPara">Do you already have an account? <a href="#" class="regLink">Login</a></p>
          </form>
          
      </div>
  
      <div class="form-container container hide" id="login-form">
          
          <img src="src/image.jpg" class="image"/>
          <form action="/login" method="post" class="form">
            <h1 class="title">Login</h1>
              <section>     
                  <input id="username" name="email" type="email" placeholder="Email" autocomplete="email" required autofocus class="form-input">
              </section>
              <section>
                  <input id="current-password" name="password" type="password" placeholder="Password" autocomplete="current-password" required class="form-input">
              </section>
              <button class="btn" type="submit">Login</button>
              <p class="rehLinkPara">Don't have an account <a href="#" class="regLink">Register</a></p>
          </form>
      </div>
  
    <script src="src/login.js"></script>
  </body>
  </html>